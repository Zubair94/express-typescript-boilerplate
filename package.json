{
  "name": "express-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Express Typescript REST API Boilerplate",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "compile": "webpack --config webpack.server.config.js --progress --colors",
    "dev": "ts-node src/server.ts",
    "dev:nodemon": "nodemon src/server.ts",
    "start:dev": "tsc && node dist/server.js",
    "start:nodemon": "tsc && nodemon dist/server.js",
    "start:production": "npm run compile && NODE_ENV=production node dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/Zubair94/express-typescript-boilerplate.git"
  },
  "keywords": [
    "express",
    "typescript",
    "nodejs"
  ],
  "author": "Zubair",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/Zubair94/express-typescript-boilerplate/issues"
  },
  "homepage": "https://gitlab.com/Zubair94/express-typescript-boilerplate#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/helmet": "^0.0.45",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.1.2",
    "dotenv-webpack": "^1.7.0",
    "nodemon": "^2.0.2",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}

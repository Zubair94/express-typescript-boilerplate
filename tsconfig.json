{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "importHelpers": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "dist",
        "baseUrl": "src",
        "moduleResolution": "node",
        "pretty": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "types": ["node", "express", "dotenv"],
    "exclude": [
        "node_modules"
    ]
}
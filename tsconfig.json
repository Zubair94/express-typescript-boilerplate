{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "target": "es6",
        "outDir": "dist",
        "baseUrl": ".",
        "moduleResolution": "node",
        "pretty": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "typeRoots": [
        "src/typings",
        "node_modules/@types"
    ],
    "types": ["node", "express", "morgan", "helmet", "nodemailer", "mongoose", "jsonwebtoken", "bcrypt"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}

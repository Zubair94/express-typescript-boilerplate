{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "target": "es6",
        "outDir": "dist",
        "baseUrl": ".",
        "moduleResolution": "node",
        "pretty": true,
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "types": ["node", "express", "morgan", "helmet"],
    "exclude": [
        "node_modules"
    ]
}
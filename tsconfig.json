{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "target": "es6",
        "outDir": "dist",
        "baseUrl": "src",
        "moduleResolution": "node",
        "pretty": true,
        "paths": {
            "@config/*": ["config/*"],
            "@controllers/*": ["controllers/*"],
            "@middlewares/*": ["middlewares/*"],
            "@routes/*": ["routes/*"],
            "@models/*": ["models/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "types": ["node", "express", "dotenv"],
    "exclude": [
        "node_modules"
    ]
}